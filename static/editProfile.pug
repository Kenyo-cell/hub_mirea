doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Document
        link(rel="stylesheet", href="http://localhost:3030/styles/editProfile.css")
    body 
        div(id="edit-form")
            form(action="/editProfile?token=" + token, method="post", enctype="multipart/form-data")
                ul 
                    li
                        label 
                            div Profile Picture
                            input(type="file", name="picture", accept="image/*")
                    li
                        label 
                            div Login
                            input(type="text", name="login", value=login)
                    li
                        label 
                            div Password
                            input(type="password", name="password")
                    li
                        label
                            input(type="submit", name="Commit Changes")